{
  "name": "pulse-framework",
  "version": "3.0.1",
  "description": "Global state and logic framework for reactive Javascript applications.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "package.json",
    "LICENCE"
  ],
  "scripts": {
    "test": "mocha -r ts-node/register --require jsdom-global/register --exit test/**/*.spec.ts",
    "test-debug": "mocha -r ts-node/register --require jsdom-global/register --inspect-brk test/**/*.spec.ts",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "minify": "uglifyjs --compress --mangle --output ./pulse.min.js -- ./dist/index.js",
    "dev": "tsc-watch",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs --dest ./docs/dist/",
    "now-build": "yarn run docs:build"
  },
  "types": "./dist/index.d.ts",
  "author": "Jamie Pine",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pulse-framework/pulse"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.2",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "eslint-config-prettier": "^6.11.0",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.1.1",
    "mock-async-storage": "^2.2.0",
    "mock-local-storage": "^1.1.15",
    "prettier": "2.0.5",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.1.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7",
    "uglify-js": "^3.10.3",
    "vuepress": "^1.0.2"
  }
}
