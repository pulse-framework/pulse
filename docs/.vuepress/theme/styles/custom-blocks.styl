.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color $blockBgColor
    border-color #42b983
  &.warning
    background-color #3b3510
    border-color darken(#ffe564, 35%)
    color darken(#ffe564, 10%)
    .custom-block-title
      color darken(#ffe564, 50%)
    a
      color $textColor
  &.danger
    background-color #4d1515
    border-color darken(red, 20%)
    color lighten(#4d1515, 60%)
    .custom-block-title
      color lighten(#4d1515, 80%)
    a
      color $textColor
  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
